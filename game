#include<stdio.h>
#include<stdlib.h>
#include<time.h>
// This is a Guess Number in C 

int main()
{
    int number, guess, nguesses=1;
    srand(time(0));
    number=rand()%100+1;
    //printf("This number is %d\n",number); to see answer

    do{
        printf("Guess the number between 1 to 100\n");
        scanf("%d",&guess);
        if(guess>number)
        {
            printf("lower number!\n");
        }
        else if(guess<number)
    {
            printf("higher number!\n");
        }
        else
        {
            printf("Your guess it in %d attempts\n", nguesses);
        }
        nguesses++;

    }while(guess!=number);
    
    return 0;
}
